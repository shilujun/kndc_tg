<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:gravity="center_horizontal"
  tools:context=".LoginActivity">
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/login_title_bar_height"
      android:gravity="center"
      android:background="@color/color_2681E3">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_centerInParent="true"
        android:text="ลงทะเบียน" />
    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/login_remark_height">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="@dimen/normal_margin"
        android:textColor="#333333"
        android:text="ยินดีต้อนรับ" />
    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/normal_margin"
      android:background="@color/transparent"
      android:orientation="horizontal">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textFontWeight="@integer/m3_sys_motion_duration_900"
        android:layout_marginRight="@dimen/normal_margin"
        android:layout_marginTop="@dimen/normal_margin"
        android:text="+66" />
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <EditText
            android:id="@+id/edit_phone_num"
            android:layout_width="300dp"
            android:layout_height="38dp"
            android:background="@null"
            android:layout_weight="1"
            android:hint="กรุณากรอกหมายเลขมือถือของคุณ"
            android:maxLength="10"
            android:maxLines="1"
            android:text=""
            android:textFontWeight="@integer/m3_sys_motion_duration_900"
            android:visibility="visible" />
          <ImageView
            android:id="@+id/iv_clear"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:background="@drawable/ic_clear"/>
        </LinearLayout>
        <ImageView
          android:id="@+id/iv_gap"
          android:layout_width="match_parent"
          android:layout_height="2dp"
          android:background="@drawable/bg_color"/>
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal">
          <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textFontWeight="@integer/m3_sys_motion_duration_900"
            android:text="โปรดป้อนหมายเลขโทรศัพท์ 10 หลักที่ขึ้นต้นด้วย 06, 08, 09" />
          <LinearLayout
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="top">
            <ImageView
              android:id="@+id/iv_error"
              android:layout_width="16dp"
              android:layout_height="16dp"
              android:visibility="gone"
              android:background="@drawable/ic_error"/>
          </LinearLayout>
        </LinearLayout>
      </LinearLayout>
    </LinearLayout>
    <LinearLayout
      android:layout_below="@+id/login_title_bar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/transparent"
      android:layout_margin="@dimen/normal_margin"
      android:orientation="horizontal">
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/normal_margin">
        <CheckBox
          android:id="@+id/chx_protocol"
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:background="@drawable/checkbox_style"
          android:button="@null"
          android:checked="false"/>
      </LinearLayout>
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textFontWeight="@integer/m3_sys_motion_duration_900"
          android:text="ยินดีต้อนรับ!" />
      </LinearLayout>
    </LinearLayout>
    <LinearLayout
      android:id="@+id/lyt_verify_code"
      android:layout_width="match_parent"
      android:background="@drawable/button_round_bg"
      android:layout_height="@dimen/login_remark_height"
      android:gravity="center">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textFontWeight="@integer/m3_sys_motion_duration_900"
        android:inputType="phone"
        android:text="ส่ง" />
    </LinearLayout>
  </LinearLayout>
  <RelativeLayout
    android:id="@+id/rlt_code"
    android:layout_marginBottom="68dp"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center"
    android:layout_alignParentBottom="true">
    <LinearLayout
      android:layout_width="116dp"
      android:layout_height="match_parent"
      android:gravity="center"
      android:background="@drawable/customer_service_bg">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="3dp"
        android:gravity="center_vertical"
        android:textSize="11sp"
        android:textFontWeight="@integer/m3_sys_motion_duration_900"
        android:text="บริการออนไลน์" />
    </LinearLayout>
  </RelativeLayout>
</RelativeLayout>