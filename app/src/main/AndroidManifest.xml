<!--      android:name="com.google.android.gms.ads.APPLICATION_ID"-->
<!--      android:value="1:727227371444:android:ee824e4da3b345610e6ce1"/>-->

  </application>

  <queries>
    <intent>
      <action android:name="android.intent.action.SEND" />
      <data android:mimeType="text/plain" />
    </intent>
  </queries>

</manifest>